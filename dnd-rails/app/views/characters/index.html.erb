<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Level</th>
      <th>Xp</th>
      <th>Character class</th>
      <th>Race</th>
      <th>Alignment</th>
      <th>Deity</th>
      <th>Size</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Eyes</th>
      <th>Hair</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.status %></td>
        <td><%= character.level %></td>
        <td><%= character.xp %></td>
        <td><%= character.character_class %></td>
        <td><%= character.race %></td>
        <td><%= character.alignment %></td>
        <td><%= character.deity %></td>
        <td><%= character.size %></td>
        <td><%= character.age %></td>
        <td><%= character.gender %></td>
        <td><%= character.height %></td>
        <td><%= character.weight %></td>
        <td><%= character.eyes %></td>
        <td><%= character.hair %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

